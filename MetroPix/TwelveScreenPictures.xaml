<Page
    x:Class="MetroPix.TwelveScreenPictures"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MetroPix"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundBrush}">
        <FlipView>
            <FlipViewItem>
                <GridView Name="Photos" Margin="300,100,0,0" SelectionMode="None" />
            </FlipViewItem>
            <FlipViewItem>
                <GridView Name="Photos2" Margin="300,100,0,0" SelectionMode="None" />
            </FlipViewItem>
        </FlipView>
    </Grid>

    <Page.BottomAppBar>
        <AppBar Padding="10,0,10,0">
            <Button Click="GoHome" HorizontalAlignment="Left">Home</Button>
        </AppBar>
    </Page.BottomAppBar>
</Page>